<div class="banner text-center d-flex align-items-center justify-content-center w-100" style="min-height: 300px; background-color: #343a40;">
  <h1 class="text-white fw-bold">Save any kind of movies</h1>
</div>

<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>My Lists</h2>
    <%= link_to 'Create a movie list', new_list_path, class: 'btn btn-success text-white border border-light rounded-3' %>
  </div>

  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card text-white bg-dark h-100">
          <%= link_to list_path(list), class: 'text-white text-decoration-none h-100 d-flex align-items-center justify-content-center' do %>
            <div class="card-body d-flex align-items-center justify-content-center" style="height: 200px;">
              <h2 class="card-title text-center fw-bold text-truncate">
                <%= list.name %>
              </h2>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
